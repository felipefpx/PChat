<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="250dp"
              android:layout_height="wrap_content"
              android:padding="8dp"
              android:gravity="center"
              android:background="@color/white_regular">

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/custom_dialog_message"
              android:textColor="@color/gray_dark"
              android:gravity="center"
              android:padding="8dp"/>

    <EditText android:layout_width="200dp"
              android:layout_height="wrap_content"
              android:id="@+id/custom_dialog_input"
              android:padding="8dp"
              android:textColor="@color/gray_dark"
              android:singleLine="true"
              android:maxLength="21"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="48dp"
                  android:orientation="horizontal"
                  android:layout_marginTop="16dp">

        <Button android:layout_width="0dp" android:layout_height="48dp"
                android:layout_weight="1"
                android:textColor="@color/gray_regular"
                android:id="@+id/custom_dialog_cancel_bt"
                android:text="@string/custom_dialog_cancel"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:stateListAnimator="@null"
                android:layout_marginRight="1dp"
                android:textSize="14sp"
                android:background="@drawable/white_button_bg"/>

        <Button android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:textColor="@color/blue_regular"
                android:id="@+id/custom_dialog_ok_bt"
                android:text="@string/custom_dialog_ok"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:stateListAnimator="@null"
                android:layout_marginLeft="1dp"
                android:textSize="14sp"
                android:background="@drawable/white_button_bg"/>

    </LinearLayout>

</LinearLayout>